<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/zurueckbutton"
            android:id="@+id/zurueck"
            android:scaleType="fitCenter"
            android:backgroundTint="@android:color/transparent"
            android:layout_below="@+id/promille"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/promille"
            android:fontFamily="serif-monospace"
            android:textColor="@color/appRed"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/alkoholpegelLabel"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/alkoholpegel"
            android:id="@+id/alkoholpegelLabel"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>