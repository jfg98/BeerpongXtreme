                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/punkte4"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

