<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gehrung.beerpongxtreme.Parcours"
    android:background="@drawable/tisch">

    <ImageView
        android:id="@+id/mainlogo"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:src="@drawable/mainlogo" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/information"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/information"
        android:scaleType="fitCenter"
        android:backgroundTint="@android:color/transparent"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/hilfe"
        android:src="@drawable/hilfe"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/home"
        android:src="@drawable/home"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/mainlogo"
        android:layout_alignEnd="@+id/mainlogo"
        android:backgroundTint="@android:color/transparent" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/suff"
        android:src="@drawable/suff"
        android:scaleType="fitCenter"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginBottom="95dp"
        android:layout_above="@+id/hilfe"
        android:layout_alignLeft="@+id/parcours"
        android:layout_alignStart="@+id/parcours"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/parcours"
        android:src="@drawable/parcours"
        android:scaleType="fitCenter"
        android:backgroundTint="@android:color/transparent"
        android:layout_below="@+id/mainlogo"
        android:layout_centerHorizontal="true"
        android:elevation="0dp" />

</RelativeLayout>
